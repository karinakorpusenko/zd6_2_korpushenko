<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tabbed.LoginPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <StyleSheet Source="/StyleSheet1.css"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Padding="20">
        <Label Text="Вход" FontSize="30" HorizontalOptions="Center" StyleClass="label" />
        <Entry x:Name="usernameEntry" Placeholder="Имя пользователя" />
        <Entry x:Name="passwordEntry" Placeholder="Пароль" IsPassword="True" />
        <Button Text="Войти" StyleClass="button" Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>