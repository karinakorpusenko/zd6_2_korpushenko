<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tabbed.Page">
    <ContentPage.Resources>

        <StyleSheet Source="StyleSheet1.css" />

    </ContentPage.Resources>
    <StackLayout Padding="10">
        <Label Text="Кредитный калькулятор" FontSize="24" />
        <Entry x:Name="loanAmountEntry" Placeholder="Сумма кредита" Keyboard="Numeric" />
        <Entry x:Name="interestRateEntry" Placeholder="Ставка (%)" Keyboard="Numeric" />
        <Entry x:Name="loanTermEntry" Placeholder="Срок (лет)" Keyboard="Numeric" />
        <Button Text="Рассчитать" Clicked="OnCalculateClicked" />
        <Label x:Name="resultLabel" FontSize="18" />
    </StackLayout>
</ContentPage>